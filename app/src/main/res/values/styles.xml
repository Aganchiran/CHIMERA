<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/contrastColor</item>
        <item name="colorControlNormal">@color/primaryTextColor</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:itemBackground">@color/backgroundColor</item>
        <item name="actionBarTabStyle">@color/contrastColor</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/backgroundLightColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="colorAccent">@color/contrastColor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarTabBarStyle">@style/MyTheme.ActionBar.TabBar</item>
        <item name="android:actionBarTabStyle">@style/MyTheme.ActionBar.TabView</item>
        <item name="android:actionBarTabTextStyle">@style/MyTheme.ActionBar.TabText</item>
    </style>

    <style name="MyTheme.ActionBar.TabBar" parent="android:style/Widget.Holo.Light.ActionBar.TabBar">
        <item name="android:background">@color/contrastColor</item>
    </style>

    <style name="MyTheme.ActionBar.TabView" parent="android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@color/contrastColor</item>
    </style>

    <style name="MyTheme.ActionBar.TabText" parent="android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/contrastColor</item>
    </style>
</resources>
